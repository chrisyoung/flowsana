module UseCase
  class <%= file_name.camelize %>
    attr_accessor :repository

    def initialize(listener, repository=nil)
      @listener   = listener
      @repository = repository.new(self) || Repository::Memory::<%= repository_name.titleize %>.new(self)
      @repository.listener = self
    end

    def <%= file_name.split('_').first %>
      @repository.<%= repository_action %>
    end

    def <%= repository_name %>_repository_<%= repository_action %>_success(<%= repository_name %>)
      @listener.<%= file_name %>_success(<%= repository_name %>)
    end

    def <%= repository_name %>_repository_<%= repository_action %>_failure
      @listener.<%= file_name %>_failure
    end
  end
end

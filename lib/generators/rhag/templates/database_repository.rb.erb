module Repository
  module Database
    class <%= repository_name.camelize %>
      def initialize(listener = nil)
        @listener = listener
        @adapter  = Repository::Adapters::AR::<%= repository_name.camelize %>.new(self)
        @model    = ::<%= repository_name.camelize %>
      end

      def create(attributes)
        @model.new(attributes).tap do |<%= repository_name %>|
          return unless <%= repository_name %>.valid?
          @adapter.create!(<%= repository_name %>.attributes).tap do |<%= repository_name %>_data|
            <%= repository_name %>.id = <%= repository_name %>_data.id
            @listener.<%= repository_name %>_repository_create_success(<%= repository_name %>)
          end
        end
      end

      def list
        @listener.<%= repository_name %>_repository_list_success(@adapter.list)
      end

      def count
        @model.count
      end

      def update(id, attributes)
        @adapter.update(id, attributes)
      end

      def <%= repository_name %>_adapter_update_success(<%= repository_name %>)
        @listener.<%= repository_name %>_repository_update_success(<%= repository_name %>)
      end

      def first
        @adapter.first
      end

      def <%= repository_name %>_adapter_list_success(sequences)
        @listener.<%= repository_name %>_repository_list_success(sequences)
      end

      def get(id)
        @adapter.get(id)
      end

      def <%= repository_name %>_adapter_get_success(<%= repository_name %>)
        @listener.<%= repository_name %>_repository_get_success(<%= repository_name %>)
      end
    end
  end
end
